<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="113">
    <defaultcontrol always="true">901</defaultcontrol>
    

    <controls>

        <control type="group">
            <visible>VideoPlayer.IsFullscreen | Window.IsVisible(visualisation)</visible>
            <visible>!Skin.HasSetting(osd.usetheme)</visible>
            <left>SidePad</left>
            <top>SidePad</top>
            <width>100</width>
            <height>100</height>
            <include>Animation.FadeIn.Slide</include>
            <include>Animation.FadeOut</include>
            <control type="image">
                <description>background image</description>
                <left>-8</left>
                <top>-8</top>
                <width>100</width>
                <height>100</height>
                <texture border="16" colordiffuse="OSDBack">common/rounded-shadow8.png</texture>
            </control>

            <control type="image" id="901">
                <centerleft>42</centerleft>
                <centertop>42</centertop>
                <width>64</width>
                <height>64</height>
                <aspectratio>keep</aspectratio>
                <texture colordiffuse="PanelWhite70">buttons/mute.png</texture>
            </control>

        </control>
        <control type="group">
            <visible>VideoPlayer.IsFullscreen | Window.IsVisible(visualisation)</visible>
            <visible>Skin.HasSetting(osd.usetheme)</visible>
            <left>SidePad</left>
            <top>SidePad</top>
            <width>100</width>
            <height>100</height>
            <include>Animation.FadeIn.Slide</include>
            <include>Animation.FadeOut</include>
            <control type="image">
                <description>background image</description>
                <left>-8</left>
                <top>-8</top>
                <width>100</width>
                <height>100</height>
                <animation effect="fade" start="100" end="90" condition="true">Conditional</animation>
                <texture border="16" colordiffuse="Background">common/rounded-shadow8.png</texture>
            </control>

            <control type="image" id="901">
                <centerleft>42</centerleft>
                <centertop>42</centertop>
                <width>64</width>
                <height>64</height>
                <aspectratio>keep</aspectratio>
                <texture colordiffuse="Dark1">buttons/mute.png</texture>
            </control>

        </control>

    </controls>

</window>
